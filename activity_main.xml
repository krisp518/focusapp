<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="focus app"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:textColor="@color/cobalt"
        android:id="@+id/txtTitle"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load reminder message"
        android:layout_centerInParent="true"
        android:background="@color/dark_cobalt"
        android:onClick="onRmdBtnClicked"
        android:id="@+id/btnRmd"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load image"

        android:layout_below="@+id/btnRmd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:background="@color/dark_cobalt"
        android:onClick="onImgBtnClicked"
        android:id="@+id/btnImg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set timer"

        android:layout_above="@+id/btnRmd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"

        android:background="@color/dark_cobalt"
        android:onClick="onTimerBtnClicked"
        android:id="@+id/btnTimer"/>

</RelativeLayout>